// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String?
  email String
  uploadedVideos String[]
}

model Video {
  id String @id @default(uuid())
  uploadedAt DateTime
  metadata String?
  author User
}

